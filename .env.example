# Server
PORT=8001
CORS_ORIGINS=http://localhost:5173,https://lumina-tawny-phi.vercel.app

# MongoDB
# If you don't have MongoDB installed locally, you can run the backend with an
# ephemeral in-memory MongoDB by setting USE_IN_MEMORY_DB=true and leaving
# MONGO_URL/DB_NAME unset.
# USE_IN_MEMORY_DB=true
# Optional: seed sample data into the in-memory DB (admin + categories + products)
# SEED_IN_MEMORY_DB=true
# SEED_ADMIN_EMAIL=admin@lumina.local
# SEED_ADMIN_PASSWORD=Passw0rd!
# Optional: when using a real MongoDB, seed sample data on server start (dev only).
# This is safe/idempotent (only seeds if DB is empty).
# Set to false to disable.
# SEED_DB_ON_START=true
MONGO_URL=mongodb://127.0.0.1:27017
DB_NAME=lumina

# Auth
JWT_SECRET=replace_me_with_a_long_random_string

# Stripe (test mode)
STRIPE_SECRET_KEY=sk_test_...
# Optional
STRIPE_CURRENCY=usd
STRIPE_API_VERSION=2023-10-16

# Cloudinary
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Grok (xAI)
GROK_API_KEY=
# Optional
GROK_API_BASE_URL=https://api.x.ai/v1
GROK_CHAT_MODEL=grok-2-latest
GROK_JSON_MODEL=grok-2-latest

# Admin insights
INVENTORY_LOW_STOCK_THRESHOLD=5
